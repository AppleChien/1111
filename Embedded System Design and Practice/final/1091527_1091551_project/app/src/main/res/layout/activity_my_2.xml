<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">


    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="372dp"
        android:background="@drawable/sc"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"

        android:translationY="60dp"
        tools:context=".MyActivity">

        <TextView
            android:id="@+id/textView92"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="92"
            android:textSize="40sp"
            android:translationX="50dp"
            android:translationY="40dp" />

        <TextView
            android:id="@+id/price_92"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:background="#61FEFA00"
            android:textSize="40sp"
            android:translationX="20dp"
            android:translationY="100dp" />

        <TextView
            android:id="@+id/textView95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95"
            android:textSize="40sp"
            android:translationX="210dp"
            android:translationY="40dp"/>

        <TextView
            android:id="@+id/price_95"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:background="#61FEFA00"
            android:textSize="40sp"
            android:translationX="190dp"
            android:translationY="100dp" />

        <TextView
            android:id="@+id/textView98"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98"
            android:textSize="40sp"
            android:translationX="50dp"
            android:translationY="180dp" />

        <TextView
            android:id="@+id/price_98"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:background="#61FEFA00"
            android:textSize="40sp"
            android:translationX="20dp"
            android:translationY="240dp" />
        <TextView
            android:id="@+id/textViewcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柴油"
            android:textSize="40sp"
            android:translationX="210dp"
            android:translationY="180dp" />

        <TextView
            android:id="@+id/price_cha"
            android:layout_width="125dp"
            android:layout_height="wrap_content"

            android:background="#61FEFA00"
            android:textSize="40sp"
            android:translationX="190dp"
            android:translationY="240dp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iGasoline"
        android:textSize="50sp"
        android:translationX="80dp"
        android:translationY="1dp" />

    <Button
        android:id="@+id/money"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/sc2"
        android:text="$"
        android:translationX="300dp"
        android:translationY="8dp" />



    <Button
        android:id="@+id/map"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sc2"
        android:translationX="10dp"
        android:translationY="450dp"
        android:text="地圖" />

    <Button
        android:id="@+id/shop"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_toEndOf="@+id/map"
        android:layout_toRightOf="@+id/map"
        android:background="@drawable/sc2"
        android:translationY="450dp"
        android:text="加油站列表" />
</RelativeLayout>
