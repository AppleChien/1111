
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LastActivity">

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="192dp"
        android:background="@drawable/sc"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".LastActivity">

        <TextView
            android:id="@+id/textViewddata"
            android:layout_width="113dp"
            android:layout_height="35dp"
            android:text="本程式由"
            android:translationY="10dp" />
        <TextView
            android:id="@+id/textViewpeople1"
            android:layout_width="113dp"
            android:layout_height="35dp"
            android:text="1091527 李育成"
            android:translationY="50dp" />
        <TextView
            android:id="@+id/textViewpeople2"
            android:layout_width="113dp"
            android:layout_height="35dp"
            android:text="1091551 簡珮庭"
            android:translationY="90dp" />
        <TextView
            android:id="@+id/textViewdesign"
            android:layout_width="113dp"
            android:layout_height="35dp"
            android:text="製作"
            android:translationY="130dp" />
    </RelativeLayout>



    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sc2"
        android:onClick="exit"
        android:text="Exit"
        android:translationX="390dp"
        android:translationY="130dp" />


    <Button
        android:id="@+id/data"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sc2"
        android:text="資訊輸入"
        android:translationX="390dp"
        android:translationY="70dp" />

    <Button
        android:id="@+id/fat"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sc2"
        android:translationX="390dp"
        android:translationY="10dp"
        android:text="每日熱量" />

</RelativeLayout>
